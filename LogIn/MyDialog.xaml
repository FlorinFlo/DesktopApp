<Window x:Class="LogIn.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyDialog" Height="120" Width="300">
    <StackPanel>
        <Label HorizontalAlignment="Center">
            <Label.Content>
                <AccessText TextWrapping="Wrap" TextAlignment="Center" Text="You have 5 minutes left please finish\n your work and save !"/>
            </Label.Content>
        </Label>

        <Button Content="OK" Click="OKButton_Click" Width="75" Height="23" Margin="10"/>
    </StackPanel>
    
</Window>
