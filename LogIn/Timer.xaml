<Window x:Class="LogIn.TimerBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="23" Width="75" ResizeMode="NoResize" WindowStyle="None" Closing="Window_Closing" >
    <Grid >
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal"  >
        <Label Content="00" Name="timerhour" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content=":" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Label Content="00" Name="timerminutes" HorizontalAlignment="Right" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
